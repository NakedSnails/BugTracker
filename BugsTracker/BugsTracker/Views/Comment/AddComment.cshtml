@model BugsTracker.Models.Comment
@{
    ViewBag.Title = "Add new comment";
}
<div class="container">
    @using (Html.BeginForm("AddComment", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })  

        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })            
            <div class="col-sm-4">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                @Html.ActionLink("Cancel", "Index", "Bug", null, new { @class = "btn btn-default" })
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </div>
    }

</div>
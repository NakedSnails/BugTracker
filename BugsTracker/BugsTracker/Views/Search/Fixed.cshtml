@model List<BugsTracker.Models.Bug>
@{
    ViewBag.Title = "Result";
}
<h1 class="text-center"> Fixed Bugs </h1>
@foreach (var bug in Model)
{
    <div class="row">
        <h4>
            Bug Number: @bug.Id
        </h4>

        <h4>
            Title: @bug.Title
        </h4>

        <a href="/Bug/Details/@bug.Id" class="btn btn-success"> View Details </a>
        <hr />
    </div>
}
<div class="pull-right">
    <a class="btn btn-default" href="/Home/Index"> Home Page </a>
</div>
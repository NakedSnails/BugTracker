
@model BugsTracker.Models.BugViewModel

@{
    ViewBag.Title = "Add Comment";
}

<div class="container">    
    <div class="well"> 
        <h2 class="text-center">Bug Number: @Model.Id</h2>
        <h3 class="text-center">@Model.Title</h3>
        <p>@Model.Description</p>
        <p>State: @Model.State</p>        
         
            @using (Html.BeginForm("AddComment", "Bug", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.AuthorId)
                @Html.HiddenFor(m => m.State)
                @Html.HiddenFor(m => m.Title)
                @Html.HiddenFor(m => m.Description)   

                    <div class="form-group">
                        @Html.LabelFor(m => m.Comment.Content, new { @class = "control-label col-sm-4" })
                        <div class="col-sm-4">
                            @Html.TextAreaFor(m => m.Comment.Content, new { @class = "form-control", @rows = "7" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            @Html.ActionLink("Cancel", "Index", "Bug", null, new { @class = "btn btn-default" })
                            <input type="submit" value="AddComment" class="btn btn-primary" />
                        </div>
                    </div>
                    }
                </div>
</div>


